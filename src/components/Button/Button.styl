// Buttons generic
.buttons
    background #999
    padding 1em
    font-size .9em
    margin .3em
    color white
    text-decoration none
    flex-grow 1
    text-align center

// Filter Buttons
.form_group 
    margin auto
    width 100%
  
  .button_filter 
    height 56px
    width 500px
    padding-top 5px
    display flex
    justify-content space-around
    align-items center
  
  .btn_search 
    background #999
    border 1px solid transparent
    min-width 137px
    //height 40px
    border-radius 30px
    font-weight 300
    font-size 14px
    color #fff
    text-decoration none
    padding 8px 16px 8px 16px

    &.active
      background-color #009688

    &:focus
      //height 40px
      background #009688
      position initial
      margin-bottom 0
      margin-top 0
    
     


@media (max-width 500px)
    .buttons
        width 100%
    
    .button_filter
        width 100%
        display flex
        flex-direction column

    .btn_search
        margin 5px