body
    width 100%
    height 100vh
    position absolute
    margin 0
    padding 0
    background #f0f0f0
    font-family Roboto

span
    font-weight 600
  
h1
    text-transform uppercase
    font-weight 500
  
h3
    font-weight 300

.filter_container 
    margin 10px auto
    display flex
    -webkit-flex-direction row
    -moz-flex-direction row
    flex-direction row
    justify-content space-between
    flex-wrap nowrap
    max-width 50%

.input_container
    padding 40px
    display flex
    align-items center
    flex-direction row
    align-content center
    justify-content center
    & svg
        font-size 40px
        margin 0
        border 5px
        border-radius 5px 0px 0px 5px
        background #fff
        text-align center
        padding 9px
        height 45px
    & input
        width 30%
        height 45px
        margin 0
        padding 15px
        border none
        border-radius 0px 5px 5px 0px

@media (max-width: 500px)
    .input_container
        & input
          width 100%
    
    .filter_container
        display block
    
    h1
        font-size 20px
        text-align center
    
    h3
        font-size 16px
        text-align center