*,
*::before,
*::after
  box-sizing border-box

img 
  height 200px
  max-width 100%
  vertical-align middle

 
ul.cards 
  display flex
  flex-wrap wrap
  list-style none
  margin 0
  padding-left 80px
  padding-right 80px


.cards_item 
  display flex
  padding 0
  @media(min-width 40rem) 
    width 50%
  
  @media(min-width 56rem) 
    width 24.3333%

.card 
  width 100%
  margin 8px
  background-color white
  border-radius 0.25rem
  box-shadow 0 20px 40px -14px rgba(0,0,0,0.25)
  display flex
  flex-direction column
  overflow hidden
  &hover 
    .card_image 
      filter contrast(100%)
    
  


.card_content 
  display flex
  flex 1 1 auto
  flex-direction column
  padding 1rem


.card_image 
  background-position center center
  background-repeat no-repeat
  background-size cover
  border-top-left-radius 0.25rem
  border-top-right-radius 0.25rem
  filter contrast(70%)
  overflow hidden
  position relative
  transition filter 0.5s cubic-bezier(.43,.41,.22,.91)
  &before 
    content ""
	  display block
    padding-top 56.25%
  
  @media(min-width 40rem) 
    &before 
      padding-top 66.6%

  & img
    width 100%
    height auto

.card_title 
  color #444444
  font-size 1.25rem
  font-weight 300
  letter-spacing 2px
  text-transform uppercase


.card_text 
  flex 1 1 auto
  font-size 0.875rem
  line-height 1.5
  margin-bottom 1.25rem


@media (max-width 500px)
    .cards
       flex-direction column
       align-items center

    .card
        width 200px
        
    .card_title
        font-size 15px

    .card_image
        width 100%
        height: auto;